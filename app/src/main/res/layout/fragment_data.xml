<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="32dp"
    tools:context=".ui.DataFragment">

    <EditText
        android:id="@+id/data_fragment_enter_count"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp"
        android:layout_width="match_parent"
        android:inputType="number"
        android:hint="@string/data_fragment_enter_count"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="16dp"
        android:enabled="false"
        android:text="@string/data_fragment_go"
        android:id="@+id/data_fragment_button"
        app:layout_constraintTop_toBottomOf="@+id/data_fragment_enter_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>